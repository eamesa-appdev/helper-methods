<h1>New album</h1>

<% @album.errors.full_messages.each do |message| %>
  <p style="color: red;"><%= message %></p>
<% end %>

<%= form_with(model: @album) do |form|%>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :artist %>
    <%= form.text_area :artist %>
  </div>

  <%= form.button %>
<%end%>
</form>