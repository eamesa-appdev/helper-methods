<div>
  <div>
    <h1>
      Album #<%= @album.id %> details
    </h1>

    <div>
      <div>
        <%= link_to "Go back", albums_path%>
      </div>

      <div>
      <%= link_to "Edit album", edit_album_path(@album) %>
      </div>

      <div>
        <a href="<%=album_path(@album)%>" data-method="delete">
          Delete album
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= @album.title %>
      </dd>

      <dt>
        Artist
      </dt>
      <dd>
        <%= @album.artist %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@album.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@album.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>
